# This program calculates the distance traveled

def main():
    # Ask a user to enter the speed of vehicle and time traveled
    
    speedOfvehicle = float ( input(" What is the speed of the vehicle: "))
    timeTraveled = int (input (" How many hours has it traveled: "))

    print ( "\nHour", "\t\t Distance Traveled" )
    print ( "----------------------------------")

    for currentHour in range (1, timeTraveled +1 ):
        distanceTraveled = speedOfvehicle * currentHour
        print ( currentHour, "\t\t", distanceTraveled )
            
main()
